@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos:     <http://www.w3.org/2004/02/skos/core#> .
@prefix ens:      <http://www.europeana.eu/schemas/edm/> .
@prefix ontology: <http://www.geonames.org/ontology#> .
@prefix dcterms:  <http://purl.org/dc/terms/> .
@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix foaf:	   <http://xmlns.com/foaf/0.1/> .
@prefix xsd:	   <http://www.w3.org/2001/XMLSchema#>.
@prefix api2lod:  <http://api2lod.appspot.com/vocabulary#> .
@prefix owl:      <http://www.w3.org/2002/07/owl#> .

#---------------------------- Themes --------------------------------

:Theme
	a rdfs:Class;
	api2lod:pattern "http://api.ids.ac.uk/openapi/eldis/get/themes/{id}/full";
	api2lod:resultRoot "results";
	api2lod:matcher [
		api2lod:matcherName "uk.ac.ids.linker.impl.DBpedia";
		api2lod:parameter [
			api2lod:parameterKey "title";
			api2lod:parameterValue "#title";
		];
		rdf:predicate owl:sameAs . 
	];
	api2lod:matcher [
		api2lod:matcherName "uk.ac.ids.linker.impl.IATISector";
		api2lod:parameter [
			api2lod:parameterKey "title";
			api2lod:parameterValue "#title";
		];
		rdf:predicate owl:sameAs . 
	];
	api2lod:matcher [
		api2lod:matcherName "uk.ac.ids.linker.impl.ELDISThemeChildren";
		api2lod:parameter [
			api2lod:parameterKey "children_url";
			api2lod:parameterValue "#children_url";
		];
		rdf:predicate skos:narrower . 
	];
	rdfs:subClassOf skos:Concept;
	rdfs:label "Theme".

:cat_parent
	a rdf:Property ; 
	rdfs:range :Theme ;
	rdfs:domain :Theme ;
	rdfs:subPropertyOf skos:broader;
	rdfs:label "parent theme" .
	
:cat_first_parent
	a rdf:Property ; 
	rdfs:range :Theme ;
	rdfs:domain :Theme ;
	rdfs:subPropertyOf skos:broader;
	rdfs:label "first parent theme" .

:parent_url
	a api2lod:IgnoredProperty .
	
:cat_superparent
	a api2lod:IgnoredProperty .
					
:cat_level
	a rdf:Property ;
	rdfs:range rdfs:Literal;
	rdfs:domain :Theme.
	
:toplevel_parent_url
	a rdf:Property ; 
	rdfs:domain :Theme ;
	rdfs:range :Resource ;
	rdfs:subPropertyOf skos:broader;
	rdfs:label "top level parent theme url" .

:category_id
	a rdf:Property ; 
	rdfs:domain :Theme ;
	rdfs:subPropertyOf dcterms:identifier;
	rdfs:label "category identifier" .

:category_path
	a rdf:Property ; 
	rdfs:domain :Theme ;
	rdfs:subPropertyOf dcterms:identifier; # VIC: this could also be skos:note
	rdfs:label "category path" .

:children_url
	a api2lod:IgnoredProperty .
#	a rdf:Property ; 
#	rdfs:range :Theme ;
#	rdfs:domain :Theme ;
#	rdfs:subPropertyOf skos:narrower;
#	rdfs:label "children" .
	
	
:child
	a rdf:Property ; 
	rdfs:range :Theme ;
	rdfs:domain :Theme ;
	rdfs:subPropertyOf skos:narrower;
	rdfs:label "child theme" .

# VIC: theme titles should map to skos:prefLabel (?). The title is here prefixed to differentiate from the other (generic) title
:theme_title
	a rdf:Property ; 
	rdfs:domain :Theme ;
	rdfs:subPropertyOf skos:prefLabel;
	rdfs:label "title of the theme".
	
:theme_title_sort
	a rdf:Property ; 
	rdfs:domain :Theme ;
	rdfs:subPropertyOf skos:altLabel;
	rdfs:label "Sorting title of the theme".

